@page
@model LoginModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<div id="login-page" class="row">
    <div class="col s12 z-depth-6 card-panel">
        <form id="account" method="post">
            <div class="row">
                <div class="col m-6">
                    <img class="responsive-img" src="~/img/airplane.png"/>

                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Input.UserName" class="validate" id="email" type="text">
                    <label for="email" data-error="wrong" data-success="right">UserName</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">lock_outline</i>
                    <input asp-for="Input.Password" id="password" type="password">
                    <label for="password">Password</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m12 l12  login-text">
                    <label for="remember-me">Remember me</label>

                    <input asp-for="Input.RememberMe" type="checkbox" />
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button  class="btn indigo darken-3 waves-effect waves-light col s12">Login</button>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 m6 l6">
                    <p class="margin medium-small"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register Now!</a></p>
                </div>
                <div class="input-field col s6 m6 l6">
                    <p class="margin right-align medium-small"><a asp-page="./ForgotPassword">Forgot password?</a></p>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link href="~/css/login/Login.css" rel="stylesheet" />
